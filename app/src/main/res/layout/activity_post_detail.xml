<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.PostDetailActivity">

    <ImageView
        android:id="@+id/iv_upvote_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/upvote_circled" />

    <TextView
        android:id="@+id/tv_upvotes_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_upvote_post"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="10dp"
        android:text="Points:"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_postscore_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_upvotes_post"
        android:layout_marginStart="3.5dp"
        android:layout_marginTop="10dp"
        android:text="@string/tv_postscore_placeholder"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_username_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/iv_upvote_post"
        android:singleLine="true"
        android:text="@string/gebruikersnaam"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_date_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:singleLine="true"
        android:text="@string/tv_date_placeholder"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_posttitle_post"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/tv_username_post"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/iv_upvote_post"
        android:background="@drawable/post_item_border"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:text="@string/tv_posttitle_placeholder"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/tv_comment_post"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/post_item_border"
        android:gravity="start|top"
        android:hint="@string/et_write_comment"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_posttext_post"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_comment_post"
        android:layout_below="@+id/tv_posttitle_post"
        android:layout_marginTop="10dp"
        android:background="@drawable/post_item_border"
        android:paddingBottom="5dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bt_fab_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_comment_post"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="@dimen/fab_margin"
        android:clickable="true"
        android:src="@drawable/ic_mode_edit_24dp" />

</RelativeLayout>
