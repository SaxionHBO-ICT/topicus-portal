<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_popup_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_edit_popup"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/android_express_pencil"/>

    <ImageView
        android:id="@+id/iv_delete_popup"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@+id/iv_edit_popup"
        android:layout_marginStart="10dp"
        android:src="@drawable/trashcan_icon"/>

</RelativeLayout>