<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/topicusYellow"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context=".activity.RegisterUserActivity">

    <ImageView
        android:id="@+id/iv_icon_register"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/topicus_log" />

    <EditText
        android:id="@+id/et_user_register"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_below="@+id/iv_icon_register"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_border"
        android:hint="Gebruikersnaam"
        android:singleLine="true"
        android:textCursorDrawable="@null" />

    <EditText
        android:id="@+id/et_password_register"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_below="@+id/et_user_register"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_border"
        android:hint="Wachtwoord"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textCursorDrawable="@null" />

    <EditText
        android:id="@+id/et_password_register_repeat"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_below="@+id/et_password_register"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_border"
        android:hint="Wachtwoord"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textCursorDrawable="@null" />

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_below="@+id/et_password_register_repeat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@color/colorPrimary" />

    <EditText
        android:id="@+id/et_name_register"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_below="@+id/et_password_register_repeat"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_text_border"
        android:hint="Voornaam"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textCursorDrawable="@null" />

    <EditText
        android:id="@+id/et_surname_register"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_below="@+id/et_name_register"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_border"
        android:hint="Achternaam"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textCursorDrawable="@null" />

    <Button
        android:id="@+id/bt_register"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_below="@id/et_surname_register"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="@color/colorPrimary"
        android:text="@string/bt_register"
        android:textColor="@color/topicusWhite" />

</RelativeLayout>
